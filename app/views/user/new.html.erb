<h1>New User</h1>
<p class="lead">Please fill in the following information</p>
<%= form_for :user, class:'form-inline', url: '/users', html: {class: 'form-horizontal'}  do |form| %>
  <div class="form-group">
    <%= form.text_field :name, class: 'form-control', placeholder: 'Full Name' %>
  </div>
  <div class="form-group">
    <%= form.text_field :email, class: 'form-control', placeholder: 'Email address' %>
  </div>
  <div class="form-group">
    <%= form.password_field :password , class: 'form-control', placeholder: 'Password' %>
  </div>
  <div class="form-group">
    <%= form.password_field :password_confirmation, class: 'form-control', placeholder: 'Confirm your password' %>
  </div>  
  <%= form.submit 'Register' , class: 'btn btn-lg btn-primary'%>
<% end %>