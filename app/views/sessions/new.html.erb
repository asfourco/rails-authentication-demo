<h1>Login</h1>
<%= form_tag login_post_path, class: 'form-horizontal' do %>
  <div class="form-group">
    <%= text_field_tag :email, nil, class: 'form-control', placeholder: 'Email address' %>
  </div>
  <div class="form-group">
    <%= password_field_tag :password, nil, class: 'form-control', placeholder: 'Password' %>
  </div>
  <%= submit_tag 'Login' , class: 'btn btn-lg btn-success'%>
  <%= link_to 'Cancel', root_path, class: 'btn btn-lg btn-warning', role: 'button'  %>
<% end %>