<h1>Login</h1>
<%= form_tag login_post_url, class: 'form-horizontal' do %>
  <div class="form-group">
    <div class='input-group'>
      <span class='input-group-addon' id='username_addon'><span class='glyphicon glyphicon-user'></span></span>
    <%= text_field_tag :email, nil, class: 'form-control', placeholder: 'Email address' %>
  </div></div>
  <div class="form-group">
    <div class='input-group'>
      <span class='input-group-addon' id='username_addon'><span class='glyphicon glyphicon-lock'></span></span>
    <%= password_field_tag :password, nil, class: 'form-control', placeholder: 'Password' %>
  </div></div>
  <%= submit_tag 'Login' , class: 'btn btn-lg btn-success'%>
  <%= link_to 'Cancel', root_url, class: 'btn btn-lg btn-warning', role: 'button'  %>
<% end %>
<br /><br />
<p class="lead">No login credentials? Then <%= link_to 'Register here!', register_url %></p> 
<small><%= link_to 'Reset password', reset_url %></small>
