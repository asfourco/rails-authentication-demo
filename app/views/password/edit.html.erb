<h1>Reset Password</h1>
<p class='lead'>Please fill in the following information</p>
<%= form_for @user, url: update_password_url(@token), html: { method: :put, class: 'form-horizontal'}  do |form| %>
  <%= render 'partials/form_error_messages', object: form.object %>
  <div class='form-group'>
    <div class='input-group'>
      <span class='input-group-addon' id='username_addon'>
        <span class='glyphicon glyphicon-lock'></span>
      </span>
      <%= form.password_field :password , class: 'form-control', placeholder: 'New Password' %>
    </div>
  </div>
  <div class='form-group'>
    <div class='input-group'>
      <span class='input-group-addon' id='username_addon'>
        <span class='glyphicon glyphicon-lock'></span>
      </span>
      <%= form.password_field :password_confirmation, class: 'form-control', placeholder: 'Confirm your password' %>
    </div>
  </div>
  <%= form.submit 'Register' , class: 'btn btn-lg btn-primary'%>
<% end %>